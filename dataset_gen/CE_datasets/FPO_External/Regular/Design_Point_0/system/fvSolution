FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "p.*"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-3;      // relaxed from 1e-4
        relTol          0.1;
    }

    "(U|e).*"
    {
        $p;
        tolerance       1e-3;      // relaxed from 1e-4
        relTol          0.1;
    }

    "rho.*"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-3;      // relaxed from 1e-4
        relTol          0.1;
    }
}

PIMPLE
{
    nOuterCorrectors         2;   // reduced from 3
    nCorrectors              1;
    nNonOrthogonalCorrectors 0;
    transonic                yes;
}


